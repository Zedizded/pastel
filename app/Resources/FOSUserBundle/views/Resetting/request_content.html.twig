{% trans_default_domain 'FOSUserBundle' %}

    <div class="container bodyContent mb-30">
        <div class="mt-50">
            <h2 class="text-center mb-50">Mot de passe perdu</h2>
            <div class="col-sm-8 col-sm-offset-2 well myWell">

                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                   
                    <div class="form-group col-sm-8 col-sm-offset-2">
                        <label for="username">{{ 'resetting.request.username'|trans }}</label>
                        <input type="text" id="username" name="username" required="required" class="form-control"/>
                    </div>
                    
                    <div class="col-sm-12 text-center mt-20 mb-10">
                        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btnBlue" />
                    </div>
                </form>
		    </div>
        </div>
	</div>