<div class="container bodyContent mb-30">
    <div class="mt-50">
        <h2 class="text-center mb-50">Créer un compte</h2>
        <div class="col-sm-8 col-sm-offset-2 well myWell">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <div class="row">

                <div class="form-group col-sm-6">
                    {{ form_label(form.username) }}
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>

                <div class="form-group col-sm-6">
                    {{ form_label(form.firstName) }}
                    {{ form_errors(form.firstName) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_label(form.lastName) }}
                    {{ form_errors(form.lastName) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>

                <div class="form-group col-sm-6">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>

                <div class="form-group col-sm-6">
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>

                <div class="myCheckbox col-sm-6 center">
                    {{ form_label(form.pastelMember) }}
                    {{ form_errors(form.pastelMember) }}
                    {{ form_widget(form.pastelMember) }}
                </div>

            </div>

            <div class="text-center mt-30 mb-30">
                {{ form_errors(form.recaptcha) }}
                {{ form_widget(form.recaptcha) }}
            </div>

            {{ form_widget(form) }}

            <div class="col-sm-12 text-center">
                <input type="submit" value="{{ 'Créer un compte' }}" class="btn btnBlue" />
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>