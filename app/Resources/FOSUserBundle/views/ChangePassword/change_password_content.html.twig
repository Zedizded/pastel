{% trans_default_domain 'FOSUserBundle' %}

    <div class="container bodyContent mb-30">
        <div class="mt-50">
            <h2 class="text-center mb-50">Mon mot de passe</h2>
            <div class="col-sm-8 col-sm-offset-2 well myWell">

                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

                <div class="form-group col-sm-8 col-sm-offset-2">
                    {{ form_label(form.current_password) }}
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>
                <div class="form-group col-sm-8 col-sm-offset-2">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>

                <div class="form-group col-sm-8 col-sm-offset-2">
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control loginInput'}}) }}
                </div>

                {{ form_widget(form) }}
                <div class="col-sm-12 text-center mt-20 mb-10">
                    <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btnBlue" />
                </div>
                {{ form_end(form) }}
		    </div>
           
            <div class="col-sm-8 col-sm-offset-2">
                <div class="col-sm-12 text-center mt-20 mb-10">
                    <a href="{{ path('fos_user_profile_show') }}" class="btn btnBlue">Retour au profil</a>
                </div>
            </div>
        </div>
	</div>