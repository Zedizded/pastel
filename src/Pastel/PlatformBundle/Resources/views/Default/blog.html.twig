{# src/Pastel/PlatformBundle/Resources/views/Default/blog.html.twig #}
{% extends "PastelPlatformBundle::layout.html.twig" %}


{% block body %}
	
	{% for article in articles %}
		<h3>{{ article.title }}</h3>
		
		{% if article.articlePicture is not null %}
		    <img src="{{  asset('uploads/articlesPictures/'~article.articlePicture.path) }}" alt="{{ article.articlePicture.alt }}"/>
		{% endif %}		
 
		<p>{{ article.content|raw }}</p>
		<p><a href="{{ path('pastel_platform_article', { 'id': article.id }) }}">Aper√ßu</a></p>
	{% endfor %}
		
{% endblock %}